<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetCore.Maui.Pages.EmployeesPage"
             Title="Pracownicy">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Dodaj" Clicked="OnAddClicked" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto,*">
        <Label Grid.Row="0" x:Name="MessageLabel" Text="" IsVisible="False" Margin="20,8" />
        <CollectionView x:Name="List" Grid.Row="1" Margin="20,0" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,4">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="{Binding Name}" FontSize="16" />
                                <Label Text="{Binding DepartmentName}" FontSize="12" Opacity="0.8" />
                            </VerticalStackLayout>
                            <Button Grid.Column="1" Text="UsuÅ„" BackgroundColor="Red" TextColor="White"
                                    Clicked="OnDeleteClicked" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
