<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetCore.Maui.Pages.PeriodEditPage"
             Title="Okres">
    <ScrollView Margin="20">
        <VerticalStackLayout Spacing="12">
            <Label Text="Nazwa (etykieta)" />
            <Entry x:Name="LabelEntry" Placeholder="np. Styczeń 2025" />
            <Label Text="Data rozpoczęcia" />
            <DatePicker x:Name="StartDatePicker" />
            <Label Text="Data zakończenia" />
            <DatePicker x:Name="EndDatePicker" />
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,20,0,0">
                <Button Grid.Column="0" Text="Anuluj" Clicked="OnCancelClicked" />
                <Button Grid.Column="1" Text="Zapisz" Clicked="OnSaveClicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
