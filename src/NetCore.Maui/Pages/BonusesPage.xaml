<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetCore.Maui.Pages.BonusesPage"
             Title="Premie">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Picker x:Name="PeriodPicker" Title="Okres" />
            <Button Text="Oblicz premie" Clicked="OnCalculateClicked" />
            <CollectionView x:Name="ResultsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8" Margin="0,4">
                            <VerticalStackLayout>
                                <Label Text="{Binding EmployeeName}" FontAttributes="Bold" />
                                <Label Text="{Binding Details}" />
                                <Label Text="{Binding AmountText}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
