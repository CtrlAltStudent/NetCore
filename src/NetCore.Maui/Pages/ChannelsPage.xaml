<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetCore.Maui.Pages.ChannelsPage"
             Title="Kanały sprzedaży">

    <Grid RowDefinitions="Auto,*">
        <Label Grid.Row="0" x:Name="MessageLabel" Text="" IsVisible="False" Margin="20,8" />
        <CollectionView x:Name="ChannelsList" Grid.Row="1" SelectionMode="None"
                        Margin="20,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,4">
                        <Label Text="{Binding Name}" FontSize="16" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
