<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetCore.Maui.Pages.RegisterPage"
             Title="NetCore - Rejestracja"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16" VerticalOptions="Center">
            <Label Text="Rejestracja" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="HasÅ‚o" IsPassword="True" />
            <Entry x:Name="OrganizationEntry" Placeholder="Nazwa firmy / organizacji" />
            <Label x:Name="ErrorLabel" Text="" TextColor="Red" IsVisible="False" />
            <Button x:Name="RegisterButton" Text="Zarejestruj" Clicked="OnRegisterClicked" />
            <Button x:Name="BackButton" Text="Mam konto - zaloguj" Clicked="OnBackClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
